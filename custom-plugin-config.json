{
    "plugin": "custom",
    "pluginConfig": {
      "invoke_interval": "30s",
      "timeout": "5s",
      "max_output_length": 80,
      "concurrency": 3,
      "enable_message_change_based_condition_update": false
    },
    "source": "cert-expiration-detector",
    "metricsReporting": true,
    "conditions": [
      {
        "type": "CertExpiration",
        "reason": "CertReady",
        "message": "cert won't expire in 3 month"
      }
    ],
    "rules": [
      {
        "type": "temporary",
        "reason": "CertNeedsRenewal",
        "path": "/custom-config/plugin/cert_expiration_check.sh",
        "timeout": "3s"
      },
      {
        "type": "permanent",
        "condition": "CertExpired",
        "reason": "CertExpired",
        "path": "/custom-config/plugin/cert_expiration_check.sh",
        "timeout": "3s"
      },
      {
        "type": "permanent",
        "condition": "CertNotReady",
        "reason": "Unknown",
        "path": "/custom-config/plugin/cert_expiration_check.sh",
        "timeout": "3s"
      }
    ]
  }